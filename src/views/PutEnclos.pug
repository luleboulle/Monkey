		header
			#Home.text-center(style='height:100px; margin-top:10%;')

			.text-center(style='height:100px; margin-top:5%;')
			#MonkeyManager3000.center-block(style='background-color:rgba(255, 255, 255, 1); padding-top:70px;padding-bottom:70px; width:100%;  padding-left:70px;  padding-right:70px;')

				h1 Modifier un enclos :
				.container
					.row
						.col
						.col.text-center
							h3 Numero de l'enclos :
						.col.text-center
							h3 Lieux :
						.col.text-center
							h3 Proprete :
						.col.text-center
							h3 Nombre de singe :
						

					each val in Enclos
						.row
							.col
								p current :
							.col.text-center
								p= val.oldnumber=val.number
							.col.text-center
								p= val.lieux
							.col.text-center
								p= val.proprete
							.col.text-center
								p= val.nbMonkey
							

						form(method='POST' action='/enclos/number/Modify')

							.row
								.col
									p new :
								.col
									input#number.form-control.text-center(type='number', value=val.number name='number')
									input#oldnumber.form-control.text-center(type='hidden', value=val.oldnumber name='oldnumber')
								.col
									input#lieux.form-control.text-center(type='text', value=val.lieux name='lieux')
								.col
									input#proprete.form-control.text-center(type='text', value=val.proprete name='proprete')
								.col
									input#nbMonkey.form-control.text-center(type='number', value=val.nbMonkey name='nbMonkey')
								
							.row
								button.btn.btn-primary.btn-block(type='submit') Modifier
							.row 

	
			.text-center(style='height:100px; margin-top:10%;')
			







